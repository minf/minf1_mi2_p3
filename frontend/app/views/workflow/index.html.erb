
<h1>Schritt <%=h step_count_current %></h1>

<%= render :partial => "price" %>

<p>
  Bitte wählen Sie: <strong><%=h @category.name %></strong>
</p>

<p class="description"><%=h @category.description %></p>

<table>
    <tr>
      <th>Bild</th>
      <th>Auswahl</th>
      <th>Name</th>
      <th>Beschreibung</th>
      <th>Preis</th>
    </tr>

  <% @options.each do |option| %>
    <tr>
      <td><%= image_tag option.image_url unless option.image_url.blank? %></td>
      <td><%= link_to "Auswählen", choose_option_path(:id => option), :method => :post %></td>
      <td><%=h option.name %></td>
      <td><%=h option.description %></td>
      <td><%= number_to_currency sum + option.price %></td>
    </tr>
  <% end %>
</table>

<%= render :partial => "chosen" %>

